<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <item name="standardPadding">16dp</item>
        <item name="standardLargePadding">32dp</item>
        <item name="relevantTextColor">@android:color/white</item>
        <item name="irrelevantTextColor">@color/dark_disabled_color</item>
        <item name="breadcrumbButton">@drawable/breadcrumb_button</item>
        <item name="titleIndicatorColor">@color/light_title_indicator_text_color</item>
        <item name="nextIcon">@drawable/ic_action_next_item</item>
        <item name="importIcon">@drawable/ic_action_download</item>
        <item name="goToTodayIcon">@drawable/ic_action_go_to_today</item>
        <item name="timeIcon">@drawable/ic_action_time</item>
        <item name="cameraIcon">@drawable/ic_action_camera</item>
        <item name="openIcon">@drawable/ic_action_collection</item>
        <item name="removeIcon">@drawable/ic_action_remove</item>
        <item name="viewAsListIcon">@drawable/ic_action_view_as_list</item>
        <item name="nodePathDetailsBackground">@color/dark_node_path_details_background_color</item>
    </style>

    <style name="AppTheme.Light" parent="@style/Theme.AppCompat.Light">
        <item name="relevantTextColor">@android:color/black</item>
        <item name="irrelevantTextColor">@color/light_disabled_color</item>
        <item name="breadcrumbButton">@drawable/breadcrumb_button_light</item>
        <item name="titleIndicatorColor">@color/dark_title_indicator_text_color</item>
        <item name="nextIcon">@drawable/ic_action_next_item_light</item>
        <item name="importIcon">@drawable/ic_action_download_light</item>
        <item name="goToTodayIcon">@drawable/ic_action_go_to_today_light</item>
        <item name="timeIcon">@drawable/ic_action_time_light</item>
        <item name="cameraIcon">@drawable/ic_action_camera_light</item>
        <item name="openIcon">@drawable/ic_action_collection_light</item>
        <item name="removeIcon">@drawable/ic_action_remove_light</item>
        <item name="nodePathDetailsBackground">@color/light_node_path_details_background_color</item>
        <item name="viewAsListIcon">@drawable/ic_action_view_as_list_light</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewLight</item>
        <item name="android:dropDownItemStyle">@style/Widget.DropDownItemLight</item>
    </style>

    <style name="AutoCompleteTextViewLight" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="Widget.DropDownItemLight" parent="@android:style/Widget.DropDownItem">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>


    <style name="BreadCrumbs">
        <item name="background">@drawable/abc_ic_ab_back_holo_dark</item>
    </style>

    <style name="BreadcrumbSelectedNode">
        <item name="android:textSize">@dimen/abc_action_bar_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
